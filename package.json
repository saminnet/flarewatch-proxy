{
  "name": "@flarewatch/proxy",
  "version": "1.0.0",
  "private": true,
  "description": "Self-hostable proxy for FlareWatch uptime monitoring",
  "type": "module",
  "main": "./src/index.ts",
  "scripts": {
    "build": "node build.ts",
    "compile": "tsc --noEmit",
    "dev": "tsx watch src/index.ts",
    "docker:build": "docker build -t flarewatch-proxy -f docker/Dockerfile .",
    "docker:run": "docker run -p 3000:3000 flarewatch-proxy",
    "format": "oxfmt",
    "format:check": "oxfmt --check",
    "lint": "oxlint --deny-warnings --type-aware --type-check --report-unused-disable-directives",
    "start": "node dist/index.mjs",
    "start:dev": "tsx src/index.ts",
    "test": "vitest run"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "hono": "^4.11.8",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "24.10.4",
    "esbuild": "^0.27.3",
    "oxfmt": "0.28.0",
    "oxlint": "1.43.0",
    "oxlint-tsgolint": "0.11.4",
    "tsx": "^4.21.0",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  },
  "engines": {
    "node": ">=24.0.0"
  }
}
