{
  "name": "@flarewatch/proxy",
  "version": "1.0.0",
  "private": true,
  "description": "Self-hostable proxy for FlareWatch uptime monitoring",
  "type": "module",
  "main": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./node": "./src/adapters/node.ts",
    "./cloudflare": "./src/adapters/cloudflare.ts"
  },
  "scripts": {
    "compile": "tsc --noEmit",
    "build": "node build.ts",
    "dev": "tsx watch src/adapters/node.ts",
    "start": "node dist/node.mjs",
    "start:dev": "tsx src/adapters/node.ts",
    "deploy": "wrangler deploy",
    "docker:build": "docker build -t flarewatch-proxy -f docker/Dockerfile ../..",
    "docker:run": "docker run -p 3000:3000 flarewatch-proxy",
    "test": "vitest run"
  },
  "dependencies": {
    "@flarewatch/shared": "workspace:*",
    "@hono/node-server": "^1.14.3",
    "hono": "^4.11.3",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "catalog:",
    "@flarewatch/ts-config": "workspace:*",
    "@types/node": "catalog:",
    "esbuild": "^0.27.2",
    "tsx": "^4.21.0",
    "typescript": "catalog:",
    "wrangler": "catalog:"
  },
  "engines": {
    "node": ">=24.0.0"
  }
}
